---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Social from '../components/Social.astro';
import GithubIcon from '../components/icons/Github.astro';
import MailIcon from '../components/icons/Mail.astro';
import LinkIndIcon from '../components/icons/LinkedIn.astro';
import SourcecodeIcon from '../components/icons/Sourcecode.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
import { Toaster, toast } from 'sonner';
---

<Layout title="Portafolio de Miguel Cortes - Desarrollador y Programador Web">
	<main class="px-4">

		<SectionContainer class="py-44 pb-32" >
			<h1 class="text-[#e54afa]  text-4xl md:text-4.5xl lg:text-6xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10]">Hola, Soy Miguel.</h1>
			<h2 class=" text-xl lg:text-2xl text-wrap max-w-[750px]">
				Desarrollador Junior,
				<span class="text-emerald-300"> Estudiante de Ingenieria Civil Informatica,</span> 
				<span class="text-sky-200">Universidad Autonoma de Chile.</span>
			</h2>

			<nav class="flex gap-x-4 mt-8 flex-wrap">
				<Social class="bg-black" href="https://github.com/maiki-22">
				  <GithubIcon class="size-4 md:size-6" />
				  GitHub
				</Social>
				
				<Social class="bg-red-700" href="mailto:miguel.cortes.sandoval23@gmail.com">
					<Toaster position="top-center" />
					<MailIcon class="size-4 md:size-6"/>
					Mail
				  </Social>
				
				  <Social class="bg-blue-400" href="#">
					<LinkIndIcon class="size-4 md:size-6" />
					LinkedIn
				  </Social>
			</nav>
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-4xl font-semibold mb-4 flex gap-x-2 items-center text-[#e54afa]"> 
				<SourcecodeIcon class="size-8"/>
				Proyectos 
			</h2>

			<Projects/>
		</SectionContainer>
		
		<SectionContainer id="skills">
		</SectionContainer>
	</main>
	<Footer/>
</Layout>


